<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <!-- Required meta tags always come first -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/stylesheets/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>

  <body>

        <%- include admin-header %>
    
         <div class="container">
            <div class="lsit-box">
              <div class="row">
                     <h3 class="col-sm-2"></h3>
                     <h3 class="col-sm-12">文章列表</h3>
              </div>

              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>类型</th>
                    <th>标题</th>
                    <th>发布人</th>
                    <th>日期</th>
                    <th>操作</th>
                  </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(item,index){ %>
                    <tr>
                        <td><%= index+1 %></td>
                        <td><%= item.type %></td>
                        <td><%= item.title %></td>
                        <td><%= item.author %></td>
                        <td><%= item.meta.updateAt %></td>
                        <td>
                          <button type="button" class="btn btn-warning">查看</button>
                          <a href="/admin/release/?id=<%= item._id%>"><button type="button" class="btn btn-success">修改</button></a>
                          <button type="button" class="btn btn-danger">删除</button>
                        </td>
                    </tr>
                    <% }) %>     
                </tbody>
              </table>

          </div>

        </div>

  </body>

</html>

